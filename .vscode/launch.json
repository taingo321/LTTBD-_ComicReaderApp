    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "comic_reader",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "comic_reader (profile mode)",
            "request": "launch",
            "type": "dart",
